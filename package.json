{
  "name": "msol-pa-platform-client",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "test": "jest",
    "test:ci": "npm run test -- --watchAll=false --reporters=default --reporters=jest-junit",
    "lint": "eslint \"src/**/*.{js,jsx}\"",
    "lint:fix": "eslint \"src/**/*.{js,jsx}\" --fix",
    "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}' --config ./.prettierrc",
    "preview": "vite preview --host --port 3000",
    "start-app": "npm run build && npm run preview"
  },
  "dependencies": {
    "@emerson/dynamic-ui-public": "^0.0.1",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/material": "^5.15.11",
    "@okta/okta-auth-js": "6.6.1",
    "@okta/okta-react": "^6.4.3",
    "@reduxjs/toolkit": "^1.8.4",
    "axios": "^1.6.7",
    "colors": "1.4.0",
    "i18next": "^23.6.0",
    "i18next-browser-languagedetector": "^7.1.0",
    "i18next-http-backend": "^2.3.1",
    "mathjs": "^11.11.2",
    "prop-types": "^15.8.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-i18next": "^13.3.1",
    "react-redux": "^8.0.2",
    "react-router-dom": "^5.3.0",
    "redux-saga": "^1.2.3",
    "text-encoding": "^0.7.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.18.2",
    "@babel/preset-react": "^7.17.12",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^12.1.5",
    "@testing-library/user-event": "^14.2.0",
    "@types/jest": "^29.5.12",
    "@vitejs/plugin-react": "^4.0.0",
    "dotenv": "^16.0.1",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "29.7",
    "jest-environment-jsdom": "^28.1.3",
    "jest-junit": "^16.0.0",
    "prettier": "^2.7.1",
    "ts-jest": "^29.1.2",
    "vite": "^4.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && CI=true npm run test"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{html,css,less,ejs}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.(ts|tsx)?$": "ts-jest",
      "^.+\\.(js|jsx)$": "babel-jest"
    },
    "moduleNameMapper": {
      "^@okta/okta-auth-js$": "<rootDir>/node_modules/@okta/okta-auth-js/dist/okta-auth-js.umd.js",
      "\\.(css|less)$": "<rootDir>/test/jest/__mocks__/styleMock.js"
    },
    "setupFiles": [
      "<rootDir>/jest.setup.js"
    ]
  }
}
